{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
   
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 my-5 px-5 border border-2 border-warning  px-5 palegoldenrod">
                <div class="mt-4 text-danger">
                    <strong>
		                {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
		            </strong>
	            </div>
                <div class="form-group mt-5">
                    <h1 class="text-center uppercase text-primary py-3 mb-5">Connexion</h1>
                    <form action="{{ path('login') }}" method="post"> 
                        <div class="mb-5">      
                            <label for="username" class="text-white">Email:</label>
                            <input type="text" id="username" name="_username"  class="form-control" value="{{ last_username }}"/>
                         </div>
                            <label for="password" class="text-white">Password:</label>
                             <input type="password" id="password" name="_password"  class="form-control"/>

                        {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account"/> #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="form-control btn btn-primary my-5">Login</button>
                    </form>
	            </div>
            </div>
        </div>
    </div>
{% endblock %}
